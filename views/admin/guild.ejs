<html lang="en">
  <%- include("component/head")  %> 
  <style>
    .black{
      background-color: rgb(46, 46, 46);
    }
    .gray{
      background-color: rgb(79, 78, 78);
    }
    .card{
      margin-top: 50px;
    }
    .card-block{
      width: 80%;
      height: 80%;
      /* border: 1px solid red; */
    }
    ul{
      margin-bottom: 0;
      width: 150px;
      padding: 0 !important;
    }
    .span{
      position: absolute;
      bottom: 18px;
      right:10px;
    }
  </style>
  <body>  
    <div class="container">     
        <div class="card" style="width: 20rem;">
          <div class="inner black" style="width: 100%; padding: 40px 0;">
            <a class="span" href="/admin/guild">&laquo; back</a>
            <div class="card-block mx-auto black">
              <h3 class="text-center text-white"><%= list.name %></h3>
              <p class="text-center text-white" style="margin-bottom: 0; padding-bottom: 16px;"><%= list.description %></p>
             </div>
             <div class="card-block mx-auto gray">
               <ul class="mx-auto text-center" style="list-style: none;">
                <li><p class="text-white">win: <span style="color: rgb(46, 216, 37);"><%= list.win %></span> </p></li>
                <li><p class="text-white">lose: <span style="color: rgb(216, 37, 37);"><%= list.lose %></span> </p></li>
               </ul>
              <p class="text-white fw-bold" style="padding-left: 15px;" >
                server:
                <% for( let i = 0; i < list.server.length; i++ ) { %>
                  <a class="text-white text-decoration-none" href="/admin/server/<%= list.server[i].name  %>"><%= list.server[i].name  %></a>  
                <% } %>
                </p>
             </div>
          </div>
        </div>     
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>