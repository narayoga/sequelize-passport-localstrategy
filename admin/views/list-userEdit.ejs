<html lang="en">
<%- include("component/head")  %> 
<style>
  .dropdown-menu{
    width: 25em !important;
  }
  .span{
    margin: 0 1em;
  }
</style>
  <body>
    <div class="card" style="width: 25rem; margin: 5em; padding: 2em;">
      <h2 style="margin-bottom: 1rem;">Update data</h2>
      <a href="/list"></a>                    <!-- apa ini -->

      <!-- add form -->
      <form method="post" action="/update/<%= list.id %>">
        <div class="mb-3">
          <label for="username" class="form-label ms-2">username</label>
          <input placeholder="username" class="form-control" id="username" name="username" type="text" value="<%= list.biodata.username %>"></input>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label ms-2">email</label>
          <input placeholder="email" class="form-control" id="email" name="email" type="text" value="<%= list.email %>"></input>
        </div>
        <div class="mb-3">
          <label for="first_name" class="form-label ms-2">first name</label>
          <input placeholder="first_name" class="form-control" id="first_name" name="first_name" type="text" value="<%= list.biodata.first_name %>"></input>
        </div>
        <div class="mb-3">
          <label for="last_name" class="form-label ms-2">last name</label>
          <input placeholder="last_name" class="form-control" id="last_name" name="last_name" type="text" value="<%= list.biodata.last_name %>"></input>
        </div>
        
        <div class="mb-3">
          <label for="birthDate" class="form-label ms-2">birth date</label>
          <input placeholder="birthDate" class="form-control" id="birthDate" name="birthDate" type="date" value="<%= list.biodata.birthDate %>"></input>
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label ms-2">phone</label>
          <input placeholder="phone" class="form-control" id="phone" name="phone" type="text" value="<%= list.biodata.phone %>"></input>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary login form-control">submit</button>
        </div>
      </form>
    </div>   
    <script src="./list.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>